<div
  class="shield-border sheet-card {{data.type}}"
  data-type="{{data.type}}">
  <div class="generalHeader">
    <img src="{{img}}" data-tooltip="{{name}}" />
    <span>
      {{name}}
    </span>
  </div>
  <div class="item-description" data-item-id="{{_id}}">
    <div class="item-description">{{{system.description}}}</div>
    <div class="item-dropdown-extras">{{localize (concat 'torgeternity.cosms.' system.cosm)}}</div>
    <div class="item-dropdown-extras"> {{localize "torgeternity.gear.price"}}: {{system.price.dollars}}
      ({{system.price.torgValue}}) </div>
    <div class="item-dropdown-extras"> {{localize "torgeternity.gear.techlevel"}} : {{system.axioms.tech}} </div>
    <div class="item-dropdown-extras"> {{localize "torgeternity.chatText.bonus"}} : {{system.bonus}} </div>
    {{> "systems/torgeternity/templates/chat/effects-subcard.hbs"}}
  </div>

</div>