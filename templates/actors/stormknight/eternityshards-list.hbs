<h2>{{localize "torgeternity.sheetLabels.eternityShard"}}</h2>
<div class="item-list">
  {{#each eternityshard as |item id|}}
    <li class="item draggable" data-item-id="{{item._id}}">
      <div><img src="{{item.img}}" data-tooltip="{{item.name}}" /></div>
      <span class="item-name {{TorgDisconnected item}}" data-action="itemName">{{item.name}}
        <span class="contradiction">{{item.contradictionCase}}</span></span>
      <div class="item-controls">
        <a class="item-control item-attackRoll" data-action="itemTappingRoll" {{disabled (not @root.editable)}}
          data-tooltip="{{localize 'torgeternity.iconeTitles.tappingRoll'}}">
          <i class="fas fa-dice-d20"></i>
        </a>
        <a class="item-control item-tochat" data-action="itemToChat" {{disabled (not @root.editable)}}
          data-tooltip="{{localize 'torgeternity.iconeTitles.sendToChat'}}">
          <i class="fas fa-comment"></i>
        </a>
        <a class="item-control item-edit" data-action="itemEdit"
          data-tooltip="{{localize 'torgeternity.iconeTitles.edit'}}">
          <i class="fas fa-edit"></i>
        </a>
        <a class="item-control item-delete" data-action="itemDelete" {{disabled (not @root.editable)}}
          data-tooltip="{{localize 'torgeternity.iconeTitles.delete'}}">
          <i class="fas fa-trash"></i>
        </a>
      </div>
    </li>
  {{/each}}
</div>